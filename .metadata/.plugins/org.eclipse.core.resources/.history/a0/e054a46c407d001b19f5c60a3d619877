		</form>
		
		<!-- form hit the doGet() method in the indirect servlet-->
		<form method="GET" action="indirserv">
			<p>Indirect Servlet, GET!</p>
			<input type="submit" value="Redirect Response"></input>
		</form>

		<!-- form hit the doPost method in the indirect servlet -->
		<form method="POST" action="indirserv">
			<p>indirect Servlet, POST!</p>
			<input type="submit" value="Forward Response"></input>
		</form>

		<!-- 3 more forms hitting our session servlets to be made-->
		
		<form method="GET" action="sesserv">
